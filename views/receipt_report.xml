<odoo>
    <record id="receipt_report_tree_view" model="ir.ui.view">
        <field name="name">receipt.report.tree</field>
        <field name="model">receipts.report</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">
                <field name="date" readonly="0"/>
                <field name="receipt_no" readonly="0"/>
                <field name="name"/>
                <field name="payment_mode"/>
                <field name="reference_no"/>
                <field name="branch"/>
                <field name="batch"/>
                <field name="fee_collector_id"/>
                <field name="amount" string="Total Amount"/>
                <field name="student_id" optional="1"/>
                <field name="batch_id" optional="1"/>
                <button name="act_print_receipt" type="object" class="fa fa-download"/>
            </tree>
        </field>
    </record>

